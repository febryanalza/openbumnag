          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "X-Livewire",
            "value": "true"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"fingerprint\": {\n    \"id\": \"test-fingerprint\",\n    \"name\": \"filament.auth.pages.login\",\n    \"locale\": \"id\",\n    \"path\": \"admin/login\",\n    \"method\": \"GET\"\n  },\n  \"serverMemo\": {\n    \"children\": [],\n    \"errors\": [],\n    \"htmlHash\": \"test\",\n    \"data\": {\n      \"data\": {\n        \"email\": \"admin@bumnag.com\",\n        \"password\": \"password123\",\n        \"remember\": false\n      }\n    },\n    \"dataMeta\": [],\n    \"checksum\": \"test\"\n  },\n  \"updates\": [\n    {\n      \"type\": \"callMethod\",\n      \"payload\": {\n        \"id\": \"test\",\n        \"method\": \"authenticate\",\n        \"params\": []\n      }\n    }\n  ]\n}"
